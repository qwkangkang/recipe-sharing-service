<h6>Last visited: {{formatDate DateTime.now 'MMMM Do YYYY, h:mm:ss a'}}</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your contents</p>

{{#if contents}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each contents}}
                <tr>
                    <td>
                        <a href="/contents/edit/{{_id}}">{{title}}</a>
                    </td>
                    <td>
                        {{formatDate createAt 'MMMM Do YYYY, h:mm:ss a'}}
                    </td>
                    <td>
                        <span class="dash-status">{{status}}</span>
                    </td>
                    <td>
                        <a href="/contents/edit/{{_id}}" class="btn btn-float">
                        <i class="fas fa-edit fa-small"></i>
                        </a>

                        <form action="/contents/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn red" type="submit">
                                <i class="fas fa-trash fa-small"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any contents</p>
{{/if}}